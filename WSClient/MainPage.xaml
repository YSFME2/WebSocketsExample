<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:WSClient.Models"
             xmlns:vm="clr-namespace:WSClient.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" 
             x:DataType="vm:MessageViewModel"
             x:Class="WSClient.MainPage">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Disappearing" Command="{Binding DisconnectCommand}"/>
    </ContentPage.Behaviors>
    <ContentPage.BindingContext>
        <vm:MessageViewModel/>
    </ContentPage.BindingContext>
    <Grid 
        RowDefinitions="auto,*,auto" 
        RowSpacing="10" 
        Margin="15">

        <Grid 
            ColumnSpacing="10" 
            ColumnDefinitions="*,auto,auto">
            <Entry 
                Text="{Binding Sender,Mode=TwoWay}"
                IsEnabled="{Binding IsDisconnected,Mode=OneWay}"
                Placeholder="User Name"/>
            <Button 
                Command="{Binding ConnectCommand}"
                IsEnabled="{Binding IsDisconnected,Mode=OneWay}"
                Grid.Column="1"
                Text="Connect"/>
            <Button 
                IsEnabled="{Binding IsConnected}"
                Command="{Binding DisconnectCommand,Mode=OneWay}"
                Grid.Column="2" 
                Text="Disconnect"/>
        </Grid>
        <CollectionView 
            x:Name="cvMessages" 
            Grid.Row="1" 
            ItemsUpdatingScrollMode="KeepLastItemInView" 
            x:DataType="vm:MessageViewModel" 
            ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Message" >
                    <Grid 
                        ColumnDefinitions="auto,*" 
                        RowDefinitions="*,auto" 
                        FlowDirection="{Binding FlowDirection}" 
                        ColumnSpacing="5" 
                        Margin="5" 
                        Padding="5">
                        <Image 
                            x:Name="image" 
                            WidthRequest="50" 
                            HeightRequest="50" 
                            Source="{Binding Image}" 
                            VerticalOptions="Start">
                            <Image.Clip>
                                <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25" />
                            </Image.Clip>
                            <Image.Shadow>
                                <Shadow Brush="Gray" Radius="10" Opacity="0.3"  />
                            </Image.Shadow>
                        </Image>
                        <ActivityIndicator IsRunning="{Binding Source={x:Reference image},Path=IsLoading}">

                        </ActivityIndicator>
                        <Label 
                            Text="{Binding Sender}" 
                            HorizontalOptions="Center" 
                            Grid.Row="1" 
                            FontSize="12"/>
                        <Label 
                            Text="{Binding Date}" 
                            Grid.Row="1" 
                            HorizontalOptions="Start" 
                            Grid.Column="1" 
                            FontSize="12"/>
                        <Border 
                            Grid.Column="1" 
                            WidthRequest="10" 
                            HeightRequest="10" 
                            StrokeThickness="0" 
                            HorizontalOptions="Start" 
                            VerticalOptions="End" 
                            BackgroundColor="{AppThemeBinding Dark=#5C5C5C, Light=#EBEBEB}">
                            
                        </Border>
                        <Frame  
                            Grid.Column="1"
                            CornerRadius="10" 
                            BorderColor="{AppThemeBinding Dark=#5C5C5C, Light=#EBEBEB}"
                            HorizontalOptions="Start"
                            Padding="5"
                            BackgroundColor="{AppThemeBinding Dark=#5C5C5C, Light=#EBEBEB}">
                            <Label Text="{Binding Text}" Margin="5" FontSize="16"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid Grid.Row="2" ColumnSpacing="10" ColumnDefinitions="*,auto">
            <Editor 
                x:Name="txtMessage" 
                IsEnabled="{Binding IsConnected,Mode=OneWay}"
                AutoSize="TextChanges"
                Grid.Column="0" 
                Text="{Binding Message}"
                Placeholder="Message"/>
            <Button
                x:Name="btnSend"
                IsEnabled="{Binding IsSendingEnabled,Mode=OneWay}"
                Grid.Column="1"
                VerticalOptions="Center"
                Command="{Binding SendCommand}"
                Text="Send"/>
        </Grid>
    </Grid>

</ContentPage>
